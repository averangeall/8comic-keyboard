{
    "manifest_version": 2,

    "name": "8comic 快速看",
    "description": "方便的 8comic 快速鍵",
    "version": "0.1",

    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [{
        "matches": ["http://new.comicvip.com/*"],
        "js": ["js/content.js"]
    }],
    "permissions": [
        "tabs",
        "http://new.comicvip.com/*"
    ]
}
