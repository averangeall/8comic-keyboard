{
    "manifest_version": 2,

    "name": "8comic 快速看",
    "description": "用左右鍵就可以看 8comic",
    "version": "0.3",

    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [{
        "matches": [
            "http://new.comicvip.com/*", 
            "http://www.8comic.com/*"
        ],
        "js": [
            "js/keyboard.js",
            "js/content.js"
        ]
    }],
    "options_page": "options.html",
    "permissions": [
        "storage",
        "tabs",
        "http://new.comicvip.com/*",
        "http://www.8comic.com/*"
    ]
}
